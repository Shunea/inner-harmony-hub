# Cloudflare R2 Configuration
# Copy this file to .env.local and fill in your actual credentials

# R2 Bucket Details
VITE_R2_BUCKET_NAME=your-bucket-name
VITE_R2_ACCOUNT_ID=your-account-id

# R2 API Credentials
VITE_R2_ACCESS_KEY_ID=your-access-key-id
VITE_R2_SECRET_ACCESS_KEY=your-secret-access-key

# R2 Endpoints
VITE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
VITE_R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Region
VITE_R2_REGION=auto

# ============================================
# MongoDB Atlas Configuration
# ============================================

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=yourapp

# MongoDB Credentials
MONGODB_USERNAME=your-username
MONGODB_PASSWORD=your-password

# MongoDB Database Name
MONGODB_DB_NAME=your-database-name

# MongoDB Cluster Info
MONGODB_CLUSTER=your-cluster.mongodb.net
